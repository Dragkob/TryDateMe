{
  "manifest_version": 3,
  "name": "TryDateMe",
  "version": "1.0",
  "description": "â€œAn extension designed to restore the creation and publish dates of TryHackMe rooms.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://tryhackme.com/room/*",
    "https://tryhackme.com/api/v2/rooms/details*"
  ],
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://tryhackme.com/room/*"],
      "js": ["js/content.js"]
    }
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}